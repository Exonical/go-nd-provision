# Server Configuration
SERVER_PORT=8080
GIN_MODE=debug

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=gond
DB_PASSWORD=gond
DB_NAME=gond
DB_SSLMODE=disable

# Valkey (Redis-compatible) Configuration
VALKEY_ADDRESS=localhost:6379
VALKEY_USERNAME=gond
VALKEY_PASSWORD=gond
VALKEY_DB=0

# Nexus Dashboard (NDFC) Configuration
ND_BASE_URL=https://nexus-dashboard.example.com
ND_USERNAME=admin
ND_PASSWORD=your_password_here
ND_API_KEY=                          # Takes priority over username/password if set
ND_INSECURE=true

# Compute Node Provisioning (bare metal/Slurm jobs)
ND_COMPUTE_FABRIC_NAME=compute_fabric
ND_COMPUTE_VRF_NAME=compute_vrf
ND_COMPUTE_NETWORK_NAME=compute_network
ND_COMPUTE_CONTRACT_PREFIX=              # Optional prefix for job contracts (e.g., "hpc" -> "hpc-12345")

# VM Provisioning (vCenter VMs) - VRF is per-tenant, not global
ND_VM_FABRIC_NAME=vm_fabric

# vCenter Configuration
VCENTER_URL=https://vcenter.example.com
VCENTER_USERNAME=administrator@vsphere.local
VCENTER_PASSWORD=your_password_here
VCENTER_INSECURE=true
